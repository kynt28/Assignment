<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="11dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="1dp"
    android:focusable="true"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp">

    <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipe"
        android:background="@android:color/transparent"
        android:backgroundTintMode="screen"
        android:hapticFeedbackEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp"
        swipe:show_mode="lay_down">

        <android.support.v7.widget.CardView
            android:layout_width="240dp"
            app:cardElevation="1dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/viewLike"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_light"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/txtNoiBat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Ghim"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:background="@android:color/holo_purple"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Sửa"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_trash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Xóa"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="98dp"
            app:cardElevation="1dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/holo_orange_dark"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSoThuTu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtNgayThangNamItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@android:color/white"
            swipe:cardCornerRadius="16dp">

            <android.support.constraint.ConstraintLayout
                xmlns:app="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSoTienItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:layout_marginTop="13dp"
                    android:text="21435356"
                    swipe:layout_constraintEnd_toStartOf="@+id/imgPin"
                    swipe:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtGhiChuItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxHeight="40dp"
                    android:maxLines="2"
                    android:minHeight="22dp"
                    android:scrollHorizontally="true"
                    android:text="Xin chào tôi là Nguyễn Tiến Kỳ, năm nay tôi đang học lập trình android"
                    swipe:layout_constraintBottom_toBottomOf="parent"
                    swipe:layout_constraintEnd_toEndOf="parent"
                    swipe:layout_constraintStart_toStartOf="@+id/imgIcon"
                    swipe:layout_constraintTop_toBottomOf="@+id/imgIcon" />

                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_refund_gray"
                    swipe:layout_constraintStart_toStartOf="parent"
                    swipe:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTenKhoanThuItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="Shopping"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    swipe:layout_constraintStart_toEndOf="@+id/imgIcon"
                    swipe:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_pin"
                    swipe:layout_constraintEnd_toEndOf="parent"
                    swipe:layout_constraintTop_toTopOf="parent"
                    swipe:srcCompat="@drawable/ic_pin"
                    tools:layout_editor_absoluteX="297dp"
                    tools:layout_editor_absoluteY="0dp" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </com.daimajia.swipe.SwipeLayout>

</android.support.v7.widget.CardView>